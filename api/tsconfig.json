{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "declaration": true,
    "declarationDir": "./lib",
    "moduleResolution": "node",
    "outDir": "./lib",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "emitDeclarationOnly": true
  },
  "include": ["src"],
  "exclude": ["rollup.config.ts"]
}
